@{
    ViewBag.Title = "Login";
}
@section scripts{
    <script src="~/App/Controllers/LoginController.js"></script>
}
<div>
    <div class="row">
        <h1 class="text-primary text-center" style="width:50%; margin-top:70px; margin-left:auto; margin-right:auto;">DoConnect Customer Portal</h1>
    </div>
    <div class="span4"></div>
    <div class="span4">
        <form novalidate name="Form" href="Home/Index">@*Login()*@
            <div class="panel panel-info">
                <div class="panel-heading"><h4 class="text-info text-center" style="background-color:transparent;">Please login</h4></div>
                <div class="panel-body">
                    <div class="alert alert-danger" ng-if="InvalidCredential != 'null'">Invalid username or password<br>Please enter a valid username and password</div>
                    <div class="form-group">
                        <label for="username">Username</label>&nbsp<i class="fa fa-key"></i>
                        <input type="text" name="username" id="username" class="form-control" required />
                        <span ng-show="Form.username.$dirty && Form.username.$error.required" class="help-block">Username is required</span>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>&nbsp<i class="fa fa-lock"></i>
                        <input type="password" name="password" id="password" class="form-control" required />
                        <span ng-show="Form.password.$dirty && Form.password.$error.required" class="help-block">Password is required</span>
                    </div>
                    <div class="form-actions">
                        <div class="span4"></div>
                        <div class="span4"><button type="submit" ng-disabled="Form.$invalid || dataLoading" class="btn btn-primary" @{Response.Redirect("~/Home/Index"); }>Login</button></div>
                        <div class="span4"><img ng-if="dataLoading" src="data:image/gif;base64," /></div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="span4"></div>
</div>
