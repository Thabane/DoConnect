<script type="text/javascript">
    $('.readonly').attr("readonly", true);
    $('.readonly').css('border', 'none');
    $('.readonly').css('background-color', 'transparent');

    $("#View_Profile_Modal").modal('hide');

    $("#div_PracticeInformation").hide();
    function FunctionShowPersonalInfo() {
        $("#div_PersonalInfo").show();
        $("#div_PracticeInformation").hide();
    };

    function FunctionShowPracticeInfo() {
        $("#div_PracticeInformation").show();
        $("#div_PersonalInfo").hide();
    };

    $(".nav li").on("click", function () {
        $(".nav li").removeClass("active");
        $(this).addClass("active");
    });

    function btnViewUserProfile() {
        $("#View_Profile_Modal").modal('show');
    };

    $("#div_ChangePassword").hide();
    $("#btnCancel_PasswordChange").hide(); 
    $("#btnChangePassword").click(function () {
        var btnText = $(this).html();
        if (btnText == "Change Password") {
            $("#div_ChangePassword").show();
            $("#btnChangePassword").html("Save Password");
            $("#btnCancel_PasswordChange").show();
        }
        else {
            $("#div_ChangePassword").hide();
            $("#btnChangePassword").html("Change Password");
            $("#btnCancel_PasswordChange").hide();
        }
    });

    $("#btnCancel_PasswordChange").click(function () {
        $("#div_ChangePassword").hide();
        $("#btnCancel_PasswordChange").hide();
        $("#btnChangePassword").html("Change Password");
    });

    $('#btnUpdateProfile').click(function () {//<!--When a User clicks Update button on Show View Employee Modal when a user double clicks a row-->
        var btnText = $(this).html();
        if (btnText == "Update") {
            $('.readonly').attr("readonly", false);
            $('.readonly').css('border', '1px solid #ccc');
            $("#btnUpdateProfile").html('Save');
        }
        else {
            $('.readonly').attr("readonly", true);
            $('.readonly').css('border', 'none');
            $('.readonly').css('background-color', 'transparent');
            $("#btnUpdateProfile").html('Update');
        }
    });
</script>