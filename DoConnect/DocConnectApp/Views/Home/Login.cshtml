@{
    ViewBag.Title = "Login";
}
@section scripts{
    <script src="~/App/Controllers/LoginController.js"></script>
}
<div ng-controller="LoginController">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 ">
            <div class="row">
                <div class="col-md-4 "></div>
                <div class="col-md-4 "><img alt="Brand" class="img-rounded" width="120" height="120" src="/Images/Logo/doctorIcon.png" style="align: center;"></div>
                <div class="col-md-4 "></div>
            </div>
        </div><div class="col-md-4"></div>
    </div>
    <div class="row">
        <h1 class="text-primary text-center" style="font-family: Garamond; width:50%; margin-top:5px; margin-left:auto; margin-right:auto;">DoConnect</h1>
        <h1 class="text-primary text-center" style="font-family: Garamond; width:50%; margin-top:5px; margin-left:auto; margin-right:auto;">Practice Management System</h1>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form novalidate name="Form" ng-submit="Login()">
            <div class="panel panel-info">
                <div class="panel-heading"><h4 class="text-info text-center" style="background-color:transparent;">Please login</h4></div>
                <div class="panel-body">
                    <div class="alert alert-danger" ng-if="InvalidCredential != 'null'">Invalid username or password<br>Please enter a valid username and password</div>
                    <div class="form-group">
                        <label for="username">Username</label>&nbsp<i class="fa fa-key"></i>
                        <input type="text" name="username" id="username" class="form-control" ng-model="LoginData.Username" required />
                        <span ng-show="Form.username.$dirty && Form.username.$error.required" class="help-block">Username is required</span>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>&nbsp<i class="fa fa-lock"></i>
                        <input type="password" name="password" id="password" class="form-control" ng-model="LoginData.Password" required />
                        <span ng-show="Form.password.$dirty && Form.password.$error.required" class="help-block">Password is required</span>
                    </div>
                    <div class="form-actions">
                        <div class="col-md-4"></div>
                        <div class="col-md-4"><button type="submit" ng-disabled="Form.$invalid || dataLoading" class="btn btn-primary">Login</button></div>
                        <div class="col-md-4"><img ng-if="dataLoading" src="data:image/gif;base64," /></div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

